{
  "name": "maguey-nightclub-live",
  "private": true,
  "workspaces": [
    "maguey-pass-lounge",
    "maguey-gate-scanner",
    "maguey-nights"
  ],
  "scripts": {
    "cy:open": "cypress open --config-file e2e/cypress.config.ts",
    "cy:run": "cypress run --config-file e2e/cypress.config.ts",
    "e2e": "start-server-and-test 'npm run dev --workspace=maguey-pass-lounge & npm run dev --workspace=maguey-gate-scanner' 'http://localhost:3016|http://localhost:3015' 'npm run cy:run'",
    "e2e:open": "npm run cy:open",
    "load-test:purchase": "k6 run load-tests/scenarios/ticket-purchase.js",
    "load-test:scanner": "k6 run load-tests/scenarios/scanner-burst.js",
    "load-test:dashboard": "k6 run load-tests/scenarios/dashboard-load.js",
    "load-test:webhook": "k6 run load-tests/scenarios/webhook-burst.js",
    "load-test:all": "npm run load-test:purchase && npm run load-test:scanner && npm run load-test:dashboard && npm run load-test:webhook",
    "load-test:quick": "k6 run --vus 5 --duration 30s load-tests/scenarios/ticket-purchase.js"
  },
  "devDependencies": {
    "@cypress/grep": "^5.1.0",
    "@vitejs/plugin-basic-ssl": "^1.1.0",
    "cypress": "^15.9.0",
    "cypress-plugin-stripe-elements": "^1.0.2",
    "dotenv": "^17.2.3",
    "jsqr": "^1.4.0",
    "lodash.castarray": "^4.4.0",
    "pg": "^8.18.0",
    "serve": "^14.2.5",
    "start-server-and-test": "^2.1.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@supabase/supabase-js": "^2.78.0"
  }
}
