{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": "vite",
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "outputDirectory": "dist",
  "env": {
    "VITE_SUPABASE_URL": "@vite_supabase_url",
    "VITE_SUPABASE_ANON_KEY": "@vite_supabase_anon_key",
    "VITE_QR_SIGNING_SECRET": "@vite_qr_signing_secret",
    "VITE_STRIPE_PUBLISHABLE_KEY": "@vite_stripe_publishable_key",
    "VITE_API_URL": "@vite_api_url",
    "VITE_EMAIL_PROVIDER": "@vite_email_provider",
    "VITE_EMAIL_API_KEY": "@vite_email_api_key",
    "VITE_EMAIL_FROM_ADDRESS": "@vite_email_from_address",
    "VITE_APP_BASE_PATH": "@vite_app_base_path"
  },
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "https://your-backend.example.com/api/$1"
    }
  ]
}

